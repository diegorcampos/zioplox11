<h2>Welcome to Prowl</h2>

<h2>Already a user? <strong>Sign In</strong></h2><br>
<div class='user_sign_in'>
  <%= form_tag("/session", method: "post") do %>
    <%= label_tag("email") %>
    <%= text_field_tag(:email) %>
    <%= label_tag(:password) %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Sign In")%>
  <% end %>
</div>
<div class='user_sign_up'>
  <%= form_for(@new_user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: 'Username' %> <br>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: 'Email Address' %> <br>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Password' %> <br>
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation, placeholder: 'Password'  %> <br>
    <%= f.submit "Sign Up" %>
  <% end %>
</div>
