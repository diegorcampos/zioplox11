<!doctype HTML>
<html>
<head>
  <meta charset="utf-8">
  <title>Prowl</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'application' %>
</head>
<body>

  <h2>Welcome to Prowl</h2>

  <h2>Already a user? <strong>Sign In</strong></h2><br>
  <div class='user_sign_in'>
    <%= form_tag(login_path, method: "post") do %>
      <%= label_tag("email") %>
      <%= text_field_tag(:email) %>
      <%= label_tag(:password) %>
      <%= password_field_tag(:password) %>
      <%= submit_tag("Sign In")%>
    <% end %>
  </div><br>

  <h2>New to Prowl? Sign Up!</h2>

  <div class='user_sign_up'>
    <%= form_for(@new_user) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: 'Username' %> <br>
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: 'Email Address' %> <br>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password' %> <br>
      <%= f.label :password_confirmation, 'Confirm Password' %>
      <%= f.password_field :password_confirmation, placeholder: 'Password'  %> <br>
      <%= f.submit "Sign Up" %>
    <% end %>
  </div>

</body>
</html>


